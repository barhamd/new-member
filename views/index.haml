  %head
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    %script{src: "/js/bootstrap.min.js"}

    %link{rel: "stylesheet", href: "/css/bootstrap.css"}
    %link{rel: "stylesheet", href: "/css/myapp.css"}
